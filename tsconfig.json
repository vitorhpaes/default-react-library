{
  "compilerOptions": {
    "alwaysStrict": true,
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@components/*": ["src/components/*"]
    },
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node",
      "react",
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
